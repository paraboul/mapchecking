{
    "compilerOptions": {
      "noImplicitAny": false,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "exactOptionalPropertyTypes": false,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "types": ["vite/client", "unplugin-icons/types/vue"],
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      }     
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "components.d.ts"]
  }